<div class="container">
  <form action="/group/create" method="POST">
    <div class="form-group">
      <label for="formGroupExampleInput">그룹 이름</label>
      <input type="text" class="form-control" name="name" id="group_name" placeholder="그룹 이름을 작성해주세요">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">그룹 설명</label>
      <input type="text" class="form-control" name="description" id="group_desc" placeholder="그룹 설명을 작성해주세요">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit">만들기</button>
  </form>
</div>