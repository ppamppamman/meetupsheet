  function submitMySchedule(){
    
    //$('#schedule').jqs('export');
    $.ajax({
      url: '/users/<%= current_user.id %>/schedules/<%= current_user.schedules.take.id rescue ""%>',
      type:'PUT',
      data: { 
        authenticity_token: "<%= form_authenticity_token %>",
        schedule: $('#schedule').jqs('export')
      },
